<div class="page-header">
  <h1>
    Vendors
    <a href="/vendors/new" class="btn btn-lg btn-success">New Vendor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vendor name</th>
        <!-- <th>Category</th> -->
        <th>Actions</th>
      </tr>

      <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.vendor_name %></td>
        <!-- <td><%= vendor.category %></td> -->
        <td>
          <a href="/vendors/<%= vendor.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_vendor/<%= vendor.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
