<div class="page-header">
  <h1>
    Returns
    <a href="/returns/new" class="btn btn-lg btn-success">New Return</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ship date</th>
        <th>Return by date</th>
        <th>Return notes</th>
        <th>Vendor receipt date</th>
        <th>Refund receipt date</th>
        <th>Return reason</th>
        <th>Actions</th>
      </tr>

      <% @returns.each do |something| %>
      <tr>
        <td><%= something.ship_date %></td>
        <td><%= something.return_by_date %></td>
        <td><%= something.return_notes %></td>
        <td><%= something.vendor_receipt_date %></td>
        <td><%= something.refund_receipt_date %></td>
        <td><%= something.return_reason %></td>
        <td>
          <a href="/returns/<%= something.id %>" class="btn btn-primary">Show</a>
          <a href="/returns/<%= something.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_return/<%= something.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
