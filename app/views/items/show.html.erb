<div class="page-header">
  <h3><%=@item.description %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @item.description %></dd>

      <dt>Package</dt>
      <dd><a href="/packages/<%= @item.package_id %>"><%= @item.package.tracking_number %></a></dd>

      <dt>Price</dt>
      <dd>$<%= @item.amount %></dd>

      <!-- <dt>Return</dt>
      <dd><%= @item.return_id %></dd> -->

      <dt>Order ID</dt>
      <dd><a href="/orders/<%= @item.order_id %>"><%= @item.order_id %></a></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/items" class="btn btn-primary">
        See All Items
      </a>
      <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_item/<%= @item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
